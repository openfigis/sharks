<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="ehcache.xsd" updateCheck="true" monitoring="autodetect" dynamicConfig="true">
	
	<!-- default cache settings -->
	<defaultCache maxEntriesLocalHeap="100" eternal="false" timeToIdleSeconds="1200" timeToLiveSeconds="1200" />	
	
	<diskStore path="java.io.tmpdir"/>
		
		
	<!-- ### Sharks services -->
	
	<!-- cache for entity members, ManagementEntityService -->
	<cache name="entityMembers" maxEntriesLocalHeap="1000" eternal="true" memoryStoreEvictionPolicy="FIFO"/>	
	
	
	<!-- ### RefPub ### -->
	
	<!-- cache for Country concepts coming from RefPub service -->
	<cache name="country" maxEntriesLocalHeap="1000" eternal="true" memoryStoreEvictionPolicy="FIFO"/>
	
	<!-- cache for Species concepts coming from RefPub service -->
	<cache name="species" maxEntriesLocalHeap="1000" eternal="true" memoryStoreEvictionPolicy="FIFO"/>
	
	
	<!-- ### Monikers ### -->
	
	<!-- cache for rfb4iso3 moniker -->
	<cache name="rfb4iso3" maxEntriesLocalHeap="1000" eternal="true" memoryStoreEvictionPolicy="FIFO"/>
		
	<!-- cache for rfb moniker -->
	<cache name="rfb" maxEntriesLocalHeap="1000" eternal="true" memoryStoreEvictionPolicy="FIFO"/>
	
	<!-- cache for fid to rfb mapping -->
	<cache name="rfb4fid" maxEntriesLocalHeap="1000" eternal="true" memoryStoreEvictionPolicy="FIFO"/>
		
	<!-- cache for faoLexFI moniker -->
	<cache name="faoLexDocument" maxEntriesLocalHeap="1000" eternal="true" memoryStoreEvictionPolicy="FIFO"/>
	
	
	<!-- ### GeoServer ### -->
	
	<!-- cache for specieslist -->
	<cache name="specieslist" maxEntriesLocalHeap="1000" eternal="true" memoryStoreEvictionPolicy="FIFO"/>	
	
	
	<!-- ### sitemap ### -->
	
	<cache name="sitemap" maxEntriesLocalHeap="1" eternal="true" memoryStoreEvictionPolicy="FIFO"/>		

</ehcache>