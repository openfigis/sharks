<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="sharks-storage">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		
		<class>org.sharks.storage.domain.Area</class>
		<class>org.sharks.storage.domain.Country</class>
		<class>org.sharks.storage.domain.DocumentType</class>
		<class>org.sharks.storage.domain.InformationSource</class>
		<class>org.sharks.storage.domain.Measure</class>
		<class>org.sharks.storage.domain.MeasureTag</class>
		<class>org.sharks.storage.domain.MgmtEntity</class>
		<class>org.sharks.storage.domain.MgmtEntityType</class>
		<class>org.sharks.storage.domain.PoA</class>
		<class>org.sharks.storage.domain.PoAType</class>
		<class>org.sharks.storage.domain.Species</class>
		<class>org.sharks.storage.domain.Status</class>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect" />
			<property name="hibernate.connection.provider_class" value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider" /> 
			<property name="hibernate.hikari.minimumIdle" value="20" /> 
			<property name="hibernate.hikari.maximumPoolSize" value="100" /> 
			<property name="hibernate.hikari.idleTimeout" value="30000" /> 
			<property name="hibernate.hikari.dataSourceClassName" value="net.ucanaccess.jdbc.UcanaccessDataSource" /> 

		</properties>
	</persistence-unit>
</persistence>